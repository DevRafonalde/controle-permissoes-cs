<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - controle_de_permissoes</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebars.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/controle_de_permissoes.styles.css" asp-append-version="true" />
    <link href="https://cdn.datatables.net/v/bs5/dt-1.13.5/datatables.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/df900d0bb9.js" crossorigin="anonymous"></script>
</head>
<body class="d-flex flex-column h-100">
    <header class="p-3 mb-3 border-bottom">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <a class="d-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none navbar-brand" asp-controller="Home" asp-action="Index">SI - Admin</a>
                    <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                        <li class="nav-link px-2 link-dark">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-link px-2 link-dark dropdown">
                            <a href="#" class="nav-link text-dark text-decoration-none dropdown-toggle" id="dropdownPermissoes" data-bs-toggle="dropdown" data-bs-target="#itensPermissoes" aria-expanded="false">Permissões</a>
                            <ul class="dropdown-menu text-small" aria-labelledby="dropdownPermissoes" id="itensPermissoes">
                                <li>
                                    <a class="dropdown-item" asp-controller="Permissao" asp-action="Index">Listar</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Permissao" asp-action="Cadastro">Cadastrar</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-link px-2 link-dark dropdown">
                            <a href="#" class="nav-link text-dark text-decoration-none dropdown-toggle" id="dropdownPermissoes" data-bs-toggle="dropdown" data-bs-target="#itensPermissoes" aria-expanded="false">Perfis</a>
                            <ul class="dropdown-menu text-small" aria-labelledby="dropdownPermissoes" id="itensPermissoes">
                                <li>
                                    <a class="dropdown-item" asp-controller="Perfil" asp-action="Index">Listar</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Perfil" asp-action="Cadastro">Cadastrar</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-link px-2 link-dark dropdown">
                            <a href="#" class="nav-link text-dark text-decoration-none dropdown-toggle" id="dropdownPermissoes" data-bs-toggle="dropdown" data-bs-target="#itensPermissoes" aria-expanded="false">Usuários</a>
                            <ul class="dropdown-menu text-small" aria-labelledby="dropdownPermissoes" id="itensPermissoes">
                                <li>
                                    <a class="dropdown-item" asp-controller="Usuario" asp-action="Index">Listar</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Usuario" asp-action="Cadastrar">Cadastrar</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <div class="dropdown text-end">
                        <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownPerfil" data-bs-toggle="dropdown" data-bs-target="#itensPerfil" aria-expanded="false">NOME</a>
                        <ul class="dropdown-menu text-small" aria-labelledby="dropdownPerfil" id="itensPerfil">
                            <li>
                                <a class="dropdown-item" asp-controller="AlterarSenha" asp-action="Index">Alterar Senha</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Login" asp-action="Logout">Sair</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="flex-shrink-0">
            @RenderBody()
            <br />
        </main>
    </div>
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <p class="col-md-4 mb-0 text-muted">&copy; 2023 - SI - Admin</p>
            <a href="/" class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none"></a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/v/bs5/dt-1.13.5/datatables.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
