<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - controle_de_permissoes</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebars.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/controle_de_permissoes.styles.css" asp-append-version="true" />
    <link href="https://cdn.datatables.net/v/bs5/dt-1.13.5/datatables.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/df900d0bb9.js" crossorigin="anonymous"></script>
</head>
<body>
    <header class="p-3 mb-3 border-bottom bg-secondary">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <button class="navbar-toggler pull-left" type="button" data-bs-toggle="collapse" data-bs-target="#sidebar-completa" aria-controls="navbarText" aria-expanded="true" aria-label="Toggle navigation">
                        <i class="fa-solid fa-bars fa-xl"></i>
                    </button>
                    <a class="d-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none navbar-brand" asp-controller="Home" asp-action="Index">SI - Admin</a>
                    <div class="text-end">
                        <a class="d-block link-dark text-decoration-none" asp-controller="Home" asp-action="Index">Olá, NOME</a>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="navbar-collapse collapse flex-shrink-0 p-3 text-white bg-secondary" style="width: 280px; float: left;" id="sidebar-completa">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="d-flex align-items-center pb-3 mb-3 link-dark text-decoration-none border-bottom">
            <!--COLOCAR FOTO DO SI-ADMIN OU DO CARTÓRIO-->
            <span class="fs-5 fw-semibold">SI - Admin</span>
        </a>
        <ul class="list-unstyled ps-0">
            <li class="mb-1">
                <a role="button" class="btn btn-toggle align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#permissoes-collapse" aria-expanded="false">Permissões</a>
                <div class="collapse" id="permissoes-collapse">
                    <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                        <li><a asp-area="" asp-controller="Permissao" asp-action="Cadastro" class="link-dark rounded">Cadastrar</a></li>
                        <li><a asp-area="" asp-controller="Permissao" asp-action="Index" class="link-dark rounded">Listar</a></li>
                    </ul>
                </div>
            </li>
            <li class="mb-1">
                <a role="button" class="btn btn-toggle align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#perfis-collapse" aria-expanded="false">Perfis</a>
                <div class="collapse" id="perfis-collapse">
                    <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                        <li><a asp-area="" asp-controller="Perfil" asp-action="Cadastro" class="link-dark rounded">Cadastrar</a></li>
                        <li><a asp-area="" asp-controller="Perfil" asp-action="Index" class="link-dark rounded">Listar</a></li>
                    </ul>
                </div>
            </li>
            <li class="mb-1">
                <button class="btn btn-toggle align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#usuarios-collapse" aria-expanded="false">Usuários</button>
                <div class="collapse" id="usuarios-collapse">
                    <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                        <li><a asp-area="" asp-controller="Usuario" asp-action="Cadastro" class="link-dark rounded">Cadastrar</a></li>
                        <li><a asp-area="" asp-controller="Usuario" asp-action="Index" class="link-dark rounded">Listar</a></li>
                    </ul>
                </div>
            </li>
            <li class="border-top my-3"></li>
            <li class="mb-1">
                <button class="btn btn-toggle align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#perfilUsuario-collapse" aria-expanded="false">Perfil</button>
                <div class="collapse" id="perfilUsuario-collapse">
                    <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                        <li><a href="#" class="link-dark rounded">Alterar Senha</a></li>
                        <li><a href="#" class="link-dark rounded">Sair</a></li>
                    </ul>
                </div>
            </li>
        </ul>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <p class="col-md-4 mb-0 text-muted">&copy; 2023 - SI - Admin</p>
            <a href="/" class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none"></a>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
